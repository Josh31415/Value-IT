<Window x:Class="ValueITApplication.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ValueITApplication"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Window1" Height="200" Width="300">

    <Grid>
        <Label Content="Are you sure?" HorizontalAlignment="Center" FontSize="30" Margin="30"/>
        <Grid>
            <Button x:Name="canBtn" Content="Cancel" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="20,20,40,20" Width="80" Height="40" Click="canBtn_Click"/>
            <Button x:Name="yesBtn" Content="Yes" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20" Width="80" Height="40" Click="yesBtn_Click"/>

        </Grid>
    </Grid>
</Window>
